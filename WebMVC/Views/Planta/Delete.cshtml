@model ObligatorioP3.EntidadesNegocio.Planta

@{
    ViewData["Title"] = "Eliminar Planta";
}

@if (ViewBag.MensajeError != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.MensajeError
    </div>
}


@if (ViewBag.ok != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.ok
    </div>
}

<h1>Eliminar</h1>

<h3>¿Está seguro que desea eliminar esta planta?</h3>

<div>
    <h4>Planta</h4>
    <hr />
    
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCientifico)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCientifico)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreVulgar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreVulgar)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoAmbiente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoAmbiente)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Altura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Altura)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Img/@ViewBag.Foto" height="70" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver al Listado</a>
    </form>
</div>
