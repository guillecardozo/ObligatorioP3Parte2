@{
    ViewData["Title"] = "Login";
}

@if (ViewBag.MensajeError != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.MensajeError
    </div>
}


<form action="/Usuario/LogIn" method="post">
    
    <div class="mb-3 text-center">
        <img src="/Img/LogoPrincipal.jpg" alt="Alternate Text" />
        <h3>Te damos la bienvenida a nuestro sistema</h3>
    </div>

    <div class="mb-3">
        <label for="mail" class="form-label ">Usuario</label>
        <input type="text" class="form-control" id="mail" name="mail" value="@ViewBag.Email" required>
    </div>

    <div class="mb-3">
        <label for="contra" class="form-label ">Contraseña </label>
        <input type="password" class="form-control"  id="contra" name="contra" value="@ViewBag.Password" required>
    </div><br />

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Iniciar Sesión </button>
    </div><br />

</form>
